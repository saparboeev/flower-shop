{{>header}}

<section class="flowers">
    <div class="container">
        {{#each flowers}}
            <div class="box">
                <div class="img">
                    <img src={{imageURL}} alt="">
                </div>

                <h2>Name: <span> {{flowerName}} </span></h2>
                <h3>Price: <span> ${{price}} </span></h3>
                <p>Description: <span> {{desc}} </span></p>

                <p >Status: <span> {{status}} </span> </p>

                <form class="text-center" action="/flowers/my-orders/{{id}}" method="POST">
                    <button class="my-orders bg-secondary">Add to cart</button>
                </form>

            </div>
        {{/each}}
    </div>

    {{#if flowers}}
        <div class="bottom-link">
            <a class="all-index" href="/flowers/my-orders">Go to Basket</a>
        </div>
    {{/if}}
</section>